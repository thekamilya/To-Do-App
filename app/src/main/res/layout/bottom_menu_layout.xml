<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">


/////////////////////////////////////////////////////////////

    <LinearLayout
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/statistics"
            android:padding="2dp">

        </ImageView>

        <TextView

            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Statistics"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/setting_2"
            android:padding="2dp">

        </ImageView>

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Settings"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            >

        </TextView>

    </LinearLayout>


    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/day_txt"
            android:textSize="10sp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Lists"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hobby"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/hobby_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/status_hobby_red"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

        </ImageView>

        <TextView

            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Hobby"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/hobby_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

        <TextView

            android:id="@+id/hobby_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="18 Tasks"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/personal_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/status_personal_blue"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

        </ImageView>

        <TextView

            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Personal"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/personal_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

        <TextView

            android:id="@+id/personal_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="18 Tasks"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lifeStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/lifeStyle_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/status_lifestyle_green"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

        </ImageView>

        <TextView

            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Lifestyle"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/lifeStyle_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

        <TextView

            android:id="@+id/lifeStyle_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="18 Tasks"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/work_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/status_work_orange"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

        </ImageView>

        <TextView

            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="Work"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/work_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

        <TextView

            android:id="@+id/work_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="18 Tasks"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nolist"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/nolist_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/status_nolist"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

        </ImageView>

        <TextView

            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="No list"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/nolist_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

        <TextView

            android:id="@+id/nolist_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/plus_jakarta_sans_wght"
            android:text="18 Tasks"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginBottom="15dp"/>

</LinearLayout>